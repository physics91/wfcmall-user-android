<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="addressBaseEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_round_10dp_white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textCursorDrawable">@drawable/bg_edittext_cursor_color</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="addressSearchEditText" parent="addressBaseEditText">
        <item name="android:layout_marginStart">@dimen/commonBottomButtonMarginHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/commonBottomButtonMarginHorizontal</item>
    </style>

    <style name="roadAddressTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">18dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roadAddressSettingTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">18dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="addressSortButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/bg_address_details_selector</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="addressGuideTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/exampleTitle</item>
        <item name="android:textSize">16dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="addressGuideSubTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sult_regular</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/exampleSubTitle</item>
        <item name="android:textSize">16dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>