<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="shoppingGuideTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="shoppingGuideSubText" parent="shoppingGuideTitleText">
        <item name="android:fontFamily">@font/sult_regular</item>
    </style>

    <style name="shoppingGuideContentText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/shoppingListText</item>
        <item name="android:fontFamily">@font/sult_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">-2dp</item>
    </style>

</resources>