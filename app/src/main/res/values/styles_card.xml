<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardEditTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textCursorDrawable">@drawable/bg_edittext_cursor_color</item>
        <item name="android:textSize">16dp</item>
        <item name="android:hint">****</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="cardInfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/cardNumberTextView</item>
        <item name="android:textSize">17dp</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="cardPasswordEditTextView">
        <item name="android:background">@drawable/bg_address_edittext_selector</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textCursorDrawable">@drawable/bg_edittext_cursor_color</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">11dp</item>
    </style>

</resources>