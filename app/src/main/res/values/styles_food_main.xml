<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="foodMainFooterMenuTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sult_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="foodMainTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="foodMainViewAllTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/foodMainViewAllText</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawableEnd">@drawable/ic_main_view_all_arrow</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8.5dp</item>
        <item name="android:text">전체보기</item>
    </style>

    <style name="foodMainRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">14dp</item>
    </style>

    <style name="foodMainCouponItemText">
        <item name="android:fontFamily">@font/sult_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>