<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="goToOrderImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="goToShoppingAndCityImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,1.5:1</item>
    </style>


    <style name="mainBottomMenu" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:fontFamily">@font/sult_semibold</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/mainBottomMenuText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="mainBannerPageTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sult_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>