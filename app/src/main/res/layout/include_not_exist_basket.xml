<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notExistBasketView"
        android:layout_width="132dp"
        android:layout_height="125dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_not_exist_basket" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notExistBasketTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sult_bold"
        android:includeFontPadding="false"
        android:text="장바구니가 비었어요"
        android:textColor="@color/mainTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notExistBasketView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goToPutInMenuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_round_20dp_basket_not_exist_text_stork_main"
        android:fontFamily="@font/sult_bold"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:paddingHorizontal="18dp"
        android:paddingVertical="12dp"
        android:text="메뉴 담으러 가기"
        android:textColor="@color/mainColor"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notExistBasketTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>