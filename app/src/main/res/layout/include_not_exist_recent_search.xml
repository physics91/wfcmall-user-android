<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notExistSearchImageView"
        android:layout_width="84.72dp"
        android:layout_height="126dp"
        android:src="@drawable/img_not_exist_serach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sult_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="22dp"
        android:text="찾고 싶은 메뉴 또는 가게명\n입력하세요!"
        android:textColor="@color/mainTextColor"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/notExistSearchImageView"
        app:layout_constraintStart_toStartOf="@+id/notExistSearchImageView"
        app:layout_constraintTop_toBottomOf="@+id/notExistSearchImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>