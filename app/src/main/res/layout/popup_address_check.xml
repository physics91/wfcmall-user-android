<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_pointed_triangle"
        app:layout_constraintBottom_toTopOf="@+id/addressCheckTextView"
        app:layout_constraintEnd_toEndOf="@+id/addressCheckTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addressCheckTextView"
        android:layout_width="174dp"
        android:layout_height="34.55dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/bg_round_10dp_main_address_popup_layout_color"
        android:fontFamily="@font/sult_medium"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="잠깐! 이 주소가 맞나요?"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>