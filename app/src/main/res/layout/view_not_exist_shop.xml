<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notExitShopImageView"
        android:layout_width="144.67dp"
        android:layout_height="109dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_not_exist_shop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sult_bold"
        android:text="조건에 맞는 매장이 없어요"
        android:textColor="@color/mainTextColor"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/notExitShopImageView"
        app:layout_constraintStart_toStartOf="@+id/notExitShopImageView"
        app:layout_constraintTop_toBottomOf="@+id/notExitShopImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>