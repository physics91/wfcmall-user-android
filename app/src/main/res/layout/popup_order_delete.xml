<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="296dp"
        android:layout_height="225dp"
        android:background="@drawable/bg_popup_logout_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/sult_bold"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="2dp"
            android:gravity="center"
            android:text="주문 내역을 삭제하시겠어요?"
            android:textColor="#111111"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:fontFamily="@font/sult_medium"
            android:gravity="center"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="1dp"
            android:text="삭제 후에는 복구하실 수 없습니다."
            android:textColor="#808080"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancellationBtn"
            android:layout_width="128dp"
            android:layout_height="49dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_popup_gary_btn"
            android:fontFamily="@font/sult_semibold"
            android:letterSpacing="-0.05"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmBtn"
            android:layout_width="128dp"
            android:layout_height="49dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_button_circle"
            android:fontFamily="@font/sult_semibold"
            android:letterSpacing="-0.05"
            android:text="삭제하기"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>