<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/couponCodeEditText"
            style="@style/couponEditText"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="6dp"
            android:hint="쿠폰코드를 입력해주세요."
            android:inputType="text"
            app:fontDifference="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/couponCodeIssueButton"
            style="@style/commonBottomToggleButton"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:enabled="true"
            android:fontFamily="@font/sult_medium"
            android:letterSpacing="-0.03"
            android:text="등록하기"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/couponCodeEditText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>