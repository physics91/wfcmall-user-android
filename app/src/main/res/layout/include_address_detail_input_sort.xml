<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/homeTextView"
        style="@style/addressSortButton"
        app:layout_constraintEnd_toStartOf="@id/companyTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/homeLabel"
        style="@style/roadAddressTextView"
        android:drawableStart="@drawable/ic_home"
        android:drawablePadding="3dp"
        android:paddingEnd="3dp"
        android:text="집"
        app:layout_constraintBottom_toBottomOf="@id/homeTextView"
        app:layout_constraintEnd_toEndOf="@id/homeTextView"
        app:layout_constraintStart_toStartOf="@id/homeTextView"
        app:layout_constraintTop_toTopOf="@id/homeTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/companyTextView"
        style="@style/addressSortButton"
        app:layout_constraintEnd_toStartOf="@id/newLocationTextView"
        app:layout_constraintStart_toEndOf="@id/homeTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/companyLabel"
        style="@style/roadAddressTextView"
        android:drawableStart="@drawable/ic_company"
        android:drawablePadding="3dp"
        android:paddingEnd="3dp"
        android:text="회사"
        app:layout_constraintBottom_toBottomOf="@id/companyTextView"
        app:layout_constraintEnd_toEndOf="@id/companyTextView"
        app:layout_constraintStart_toStartOf="@id/companyTextView"
        app:layout_constraintTop_toTopOf="@id/companyTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/newLocationTextView"
        style="@style/addressSortButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/companyTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/newLocationLabel"
        style="@style/roadAddressTextView"
        android:drawableStart="@drawable/ic_black_ping"
        android:drawablePadding="3dp"
        android:text="새 장소"
        app:layout_constraintBottom_toBottomOf="@id/newLocationTextView"
        app:layout_constraintEnd_toEndOf="@id/newLocationTextView"
        app:layout_constraintStart_toStartOf="@id/newLocationTextView"
        app:layout_constraintTop_toTopOf="@id/newLocationTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>