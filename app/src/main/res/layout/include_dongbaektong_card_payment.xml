<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/benefitsTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:background="@color/mainColor"
        android:fontFamily="@font/sult_bold"
        android:includeFontPadding="false"
        android:paddingHorizontal="18.5dp"
        android:gravity="center"
        android:text="혜택"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/benefitsSubTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/benefitsSubTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/benefitsSubTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:background="@color/addOrderDongbaektongPayment"
        android:fontFamily="@font/sult_medium"
        android:includeFontPadding="false"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="1dp"
        android:paddingVertical="16.5dp"
        android:paddingHorizontal="16dp"
        android:textColor="@color/addOrderDongbaektongText"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/benefitsTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="동백전 카드 결제시 기본 5% + 추가 5%\n총 10% 캐시백 적용" />


</androidx.constraintlayout.widget.ConstraintLayout>