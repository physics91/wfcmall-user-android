<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_dialog_card_layout"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22.5dp"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/sult_bold"
            android:includeFontPadding="false"
            android:letterSpacing="-0.07"
            android:lineSpacingExtra="0dp"
            android:text="정렬 순서"
            android:textColor="@color/mainTextColor"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/exit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="7.5dp"
            android:scaleType="center"
            android:src="@drawable/ic_exit"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/firstOption"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/sult_regular"
            android:gravity="left|center"
            android:lineSpacingExtra="5dp"
            android:paddingStart="12dp"
            android:text="최신 등록 순"
            android:textColor="#111111"
            android:textSize="16dp"
            android:translationY="-2.52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/firstChekcBox"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_selector_check_on"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/firstOption"
            app:layout_constraintEnd_toEndOf="@id/firstOption"
            app:layout_constraintTop_toTopOf="@id/firstOption" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/secondOption"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:fontFamily="@font/sult_regular"
            android:gravity="left|center"
            android:lineSpacingExtra="5dp"
            android:paddingStart="12dp"
            android:text="주문 많은 순"
            android:textColor="#111111"
            android:textSize="16dp"
            android:translationY="-2.52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstOption"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/secondCheckBox"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_selector_check_on"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/secondOption"
            app:layout_constraintEnd_toEndOf="@id/secondOption"
            app:layout_constraintTop_toTopOf="@id/secondOption" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thirdOption"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:fontFamily="@font/sult_regular"
            android:gravity="left|center"
            android:lineSpacingExtra="5dp"
            android:paddingStart="12dp"
            android:text="리뷰 많은 순"
            android:textColor="#111111"
            android:textSize="16dp"
            android:translationY="-2.52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondOption"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thirdCheckBox"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_selector_check_on"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/thirdOption"
            app:layout_constraintEnd_toEndOf="@id/thirdOption"
            app:layout_constraintTop_toTopOf="@id/thirdOption" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fourthOption"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:fontFamily="@font/sult_regular"
            android:gravity="left|center"
            android:lineSpacingExtra="5dp"
            android:paddingStart="12dp"
            android:text="가격 높은 순"
            android:textColor="#111111"
            android:textSize="16dp"
            android:translationY="-2.52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thirdOption"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fourthCheckbox"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_selector_check_on"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/fourthOption"
            app:layout_constraintEnd_toEndOf="@id/fourthOption"
            app:layout_constraintTop_toTopOf="@id/fourthOption" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fiveOption"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:fontFamily="@font/sult_regular"
            android:gravity="left|center"
            android:lineSpacingExtra="5dp"
            android:paddingStart="12dp"
            android:text="가격 낮은 순"
            android:textColor="#111111"
            android:textSize="16dp"
            android:translationY="-2.52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fourthOption"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fiveCheckbox"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_selector_check_on"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/fiveOption"
            app:layout_constraintEnd_toEndOf="@id/fiveOption"
            app:layout_constraintTop_toTopOf="@id/fiveOption" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/firstCheck"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_popup_check"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/firstOption"
            app:layout_constraintEnd_toEndOf="@id/firstOption"
            app:layout_constraintTop_toTopOf="@id/firstOption" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/secondCheck"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_popup_check"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/secondOption"
            app:layout_constraintEnd_toEndOf="@id/secondOption"
            app:layout_constraintTop_toTopOf="@id/secondOption" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thirdCheck"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_popup_check"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/thirdOption"
            app:layout_constraintEnd_toEndOf="@id/thirdOption"
            app:layout_constraintTop_toTopOf="@id/thirdOption" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fourthCheck"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_popup_check"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/fourthOption"
            app:layout_constraintEnd_toEndOf="@id/fourthOption"
            app:layout_constraintTop_toTopOf="@id/fourthOption" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fiveCheck"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_popup_check"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/fiveOption"
            app:layout_constraintEnd_toEndOf="@id/fiveOption"
            app:layout_constraintTop_toTopOf="@id/fiveOption" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>